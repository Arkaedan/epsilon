<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.eclipse.epsilon.eunit.dt.emf.feature"
      label="EMF Model Comparison for EUnit (EMF Compare 3.x / Kepler and after)"
      version="1.6.0.qualifier"
      provider-name="Eclipse Modeling Project"
      license-feature="org.eclipse.license"
      license-feature-version="0.0.0">

   <description url="http://www.eclipse.org/epsilon">
      This feature adds the modules required by EUnit to compare EMF-based
models using EMF Compare 3.x. It is compatible with Eclipse Kepler
and any other subsequent releases with EMF Compare 3.x.
   </description>

   <copyright>
        Copyright (c) 2018 The University of York.
        This program and the accompanying materials are made
        available under the terms of the Eclipse Public License 2.0
        which is available at https://www.eclipse.org/legal/epl-2.0
   </copyright>

   <includes
         id="org.eclipse.epsilon.dependencies.feature"
         version="0.0.0"/>

   <requires>
      <import plugin="org.eclipse.epsilon.common.dt"/>
      <import plugin="org.eclipse.epsilon.emc.emf"/>
      <import plugin="org.eclipse.epsilon.eunit.engine"/>
      <import plugin="org.eclipse.epsilon.eunit.dt"/>
      <import plugin="org.eclipse.compare"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.emf.compare" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.compare.ide" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.compare.edit" version="4.0.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.compare.ide.ui" version="4.0.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.eclipse.epsilon.eunit.dt.cmp.emf"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.eclipse.epsilon.eunit.dt.diff.emf"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
