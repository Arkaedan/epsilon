@namespace(uri="picto", prefix="")
package dom;

class Picto {
	attr String template;
	attr String format;
	attr boolean standalone;
	val Model[*] models;
	val Parameter[*] parameters;
	val CustomView[*] customViews;
}

class Model {
	attr String name;
	attr String type;
	val Parameter[*] parameters;
}

class Parameter {
	attr String name;
	attr Object value;
	attr Object[*] values;
	attr String file;
}

class CustomView {
	attr String[*] path;
	attr String icon;
	attr String format;
	attr String rule;
	attr String content;
	val Patch[*] patches;
	val Parameter[*] parameters;
	val LayerConfiguration[*] layerConfigurations;
}

class LayerConfiguration {
	attr String[*] ids;
	attr boolean active;
}

class Patch {
	attr String format;
	attr String content;
}